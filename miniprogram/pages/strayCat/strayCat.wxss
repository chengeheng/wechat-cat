/* miniprogram/pages/strayCat/strayCat.wxss */
page {
	background: #e9b878;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}

.form {
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
}
.form-item {
	width: 100%;
	height: auto;
	display: flex;
	flex-direction: column;
}
.form-item-title-request {
	padding: 0 30rpx;
	margin: 15rpx 0 0;
}
.form-item-body {
	margin: 15rpx 0;
	height: 100rpx;
	background-color: #fff;
	padding: 0 30rpx;
}
.form-image {
	width: 100%;
	min-height: 300rpx;
	display: flex;
	flex-direction: column;
}
.form-image-uploade {
	width: 100%;
	height: auto;
}

.form-submit {
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: center;
}
.form-submit-button {
	width: calc(100% - 60rpx);
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 35rpx;
}
